{
  "title": "Don't exit fullscreen when pressing ESC in Zen",
  "rules": [
    {
      "description": "Remap ESC to Option-ESC in Zen only",
      "manipulators": [
        {
          "from": {
            "key_code": "escape"
          },
          "to": [
            {
              "key_code": "escape",
              "modifiers": ["left_option"]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["app.zen-browser.zen"]
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
